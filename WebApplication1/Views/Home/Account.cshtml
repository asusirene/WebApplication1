@model  IEnumerable<WebApplication1.Models.ViewModels.AccountViewModel>
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @if (Model != null && Model.Any())
            {
                int i = 0;
                foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.Category</td>
                        <td>@item.LogDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.Money.ToString("#,0")</td>
                    </tr>
                }
            }
        </table>
    </div>
</div>